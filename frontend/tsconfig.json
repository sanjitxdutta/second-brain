{
  "compilerOptions": {
    "jsx": "react-jsx",       // Enables React 17+ JSX transform
    "lib": ["dom", "esnext"], // Includes DOM and latest ES features
    "types": ["react"],       // Loads React's type definitions
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src"]
}
